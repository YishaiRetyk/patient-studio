# Public Environment Variables (exposed to browser)

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Auth0 Configuration (public keys only)
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your_client_id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.patient-studio.com
NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH0_LOGOUT_REDIRECT_URI=http://localhost:3000

# Stripe Configuration (publishable key only)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Application Configuration
NEXT_PUBLIC_APP_NAME=Patient Studio
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SUPPORT_EMAIL=support@patient-studio.com

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_AUTOCOMPLETION=true
NEXT_PUBLIC_FEATURE_WAITLIST_AUTO_FILL=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry (optional for frontend error tracking)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Server-Side Environment Variables (NOT exposed to browser)

# Auth0 Server Configuration
AUTH0_SECRET=replace_with_secure_random_string_min_32_chars
