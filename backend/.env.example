# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (PostgreSQL with RDS in production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/patient_studio_dev?schema=public

# Redis (for rate limiting and session storage)
REDIS_URL=redis://localhost:6379

# Auth0 Configuration (per research.md)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.patient-studio.com
AUTH0_ISSUER_URL=https://your-tenant.auth0.com/

# JWT Configuration
JWT_SECRET=replace_with_secure_random_string_min_32_chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# AWS Configuration (for KMS, S3, CloudWatch)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS KMS (for field-level encryption per research.md)
AWS_KMS_KEY_ID=alias/patient-studio-encryption

# AWS S3 (for audit log storage)
AWS_S3_AUDIT_BUCKET=patient-studio-audit-logs-dev

# CloudWatch (for logging)
AWS_CLOUDWATCH_LOG_GROUP=/patient-studio/backend/dev
AWS_CLOUDWATCH_LOG_STREAM=api

# Sentry (for error tracking - FR-054)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# SendGrid (for emails with BAA - per research.md)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@patient-studio.com
SENDGRID_FROM_NAME=Patient Studio

# Stripe (for billing)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# OpenAI (for AI autocompletion - FR-023 to FR-025)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Rate Limiting (per FR-048, FR-049)
RATE_LIMIT_GLOBAL=600
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_WINDOW=900000
RATE_LIMIT_AI=20
RATE_LIMIT_AI_WINDOW=60000

# Session Configuration (per FR-004)
SESSION_TIMEOUT_INACTIVE=900000
SESSION_TIMEOUT_ABSOLUTE=28800000

# Magic Link & OTP (per FR-002)
MAGIC_LINK_TTL=900000
OTP_TTL=300000
OTP_LENGTH=6

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://patient-studio.com
CORS_CREDENTIALS=true

# Feature Flags
FEATURE_AI_AUTOCOMPLETION=true
FEATURE_WAITLIST_AUTO_FILL=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
